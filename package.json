{
  "name": "birthyay-be",
  "version": "1.0.0",
  "description": "A MERN stack with graphql api app for sending the birthday wishes mail.",
  "main": "server.js",
  "type": "module",
  "repository": "https://github.com/rakshian24/birthyay.git",
  "author": "Rakshith Sindhiya R <rakshithrao123@gmail.com>",
  "license": "MIT",
  "scripts": {
    "server": "nodemon server.js",
    "server:prod": "NODE_ENV=production nodemon server.js",
